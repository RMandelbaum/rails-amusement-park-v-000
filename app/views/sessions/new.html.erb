<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

  <div class="field">
    <%= f.label :name, "Enter your name" %><br>
    <%= f.text_field :name %>
  </div>

  <div class= "field">
    <%= f.label :password, "Enter your password" %><br>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "Sign In" %>
  <% end %>
